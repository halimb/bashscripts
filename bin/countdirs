#!/bin/bash

# Count the number of files in a given directory

directory=$1

# Check if an argument has been passed
if [[ ! "${directory}" ]]; then
	printf "\t_countfiles_: Error: Missing argument: directory name.\n" >&2
	exit 1
fi

# Check if the provided argument is a directory
if [[ ! -d "${directory}" ]]; then
	printf "\t_countfiles_: Error: \"${directory}\" is not a directory.\n"  >&2
	exit 1
fi

# Count only subdirectories of the provided directory 
count=$(ls -l -d ${directory}/*/ | wc --lines)
echo "${count}"


